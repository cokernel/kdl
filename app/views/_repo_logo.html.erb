<% unless @document.nil? %>
  <% if @document.has_key?('repository_display') %>

<div class="repo_container">
<p class="repo_label">
Provided by <%= @document['repository_display'] %></p>
</p>

<% unless repo_logo_url(@document).nil? %>
<li>
<a href="<%= repo_info_catalog_path(:id => @document['id']) %>" class="lightboxLink"><img 
   class="repo_logo"
   src="<%= repo_logo_url(@document) %>"
   alt="<%= @document['repository_display'] %>"
   title="<%= @document['repository_display'] %>"/></a>
</li>
<% end %>

</div>
  <% end %>
<% end %>
