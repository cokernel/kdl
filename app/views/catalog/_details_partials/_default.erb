<%# default partial to display solr document fields in catalog show view -%>
<dl class="defList">
  <% document_show_fields.each do |solr_fname| -%>
    <% if @document_summary.has? solr_fname %>
	    <dt class="blacklight-<%= solr_fname.parameterize %>"><%= render_document_show_field_label :field => solr_fname %></dt>
	    <dd class="blacklight-<%= solr_fname.parameterize %>"><%= render_document_show_field_value :document => @document_summary, :field => solr_fname %></dd>
    <% end -%>
  <% end -%>
  <% if @document_summary.has? 'mets_url_display' %>
    <dt>Metadata record:</dt>
    <dd><a href="<%= document['mets_url_display'] %>"><%= document['mets_url_display'] %></a></dd>
  <% end %>
</dl>
